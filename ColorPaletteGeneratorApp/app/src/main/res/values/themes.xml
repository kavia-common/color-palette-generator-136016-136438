<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.OceanProfessional" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ocean_primary</item>
        <item name="colorSecondary">@color/ocean_secondary</item>
        <item name="colorSurface">@color/ocean_surface</item>
        <item name="android:colorBackground">@color/ocean_bg</item>
        <item name="android:textColor">@color/ocean_text</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/ocean_bg</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="TextAppearance.App.Title" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.App.Body" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Code" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/ocean_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
